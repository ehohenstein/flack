{erl_opts, [debug_info]}.

{deps, [
    {cowboy, {git, "https://github.com/ninenines/cowboy", {tag, "2.6.1"}}},
    {jiffy, {git, "https://github.com/davisp/jiffy.git", {tag, "0.15.2"}}}
]}.

{relx, [
    {release, {flack, "0.1.1"}, [
        jiffy,
        ranch,
        cowlib,
        cowboy,
        flack,
        sasl
    ]},

    {sys_config, "./config/sys.config"},

    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}
]}.

{profiles, [
    {prod, [{relx, [
        {dev_mode, false},
        {include_erts, true}
    ]}]}
]}.
